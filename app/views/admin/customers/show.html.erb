<div class = 'container'>
  <div class = 'mt-3'>
    <h3 class = 'text-nowrap'><%= @customer.nickname %>さんの詳細<%= link_to "編集する", edit_admin_customer_path, class: 'btn btn-success btn-sm ml-3' %></h3>
    <table class = 'table table-hover table-inverse'>
      <thead class = 'table-secondary' height = '50'>
        <th scope="col" style="width:50%"></th>
        <th scope="col" style="width:50%"></th>
      </thead>
      <tbody>
        <tr>
          <td>会員ID</td>
          <td><%= @customer.id %></td>
        </tr>
        <tr>
          <td>ユーザーネーム</td>
          <td><%= @customer.nickname %></td>
        </tr>
        <tr>
          <td>フルネーム</td>
          <td><%= @customer.name %></td>
        </tr>
        <tr>
          <td>プロフィール</td>
          <td><%= @customer.introduction %></td>
        </tr>
        <tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>ステータス</td>
          <% if @customer.is_deleted? %>
            <td>退会</td>
          <% else %>
            <td>有効</td>
          <% end %>
        </tr>
      </tbody>
    </table>

    <h3 class = 'mt-3'><%= @customer.nickname %>さんの投稿一覧</h3>
    <table class = "table table-hover table-inverse" >
      <thead>
        <tr class = 'table-secondary'>
            <th></th>
            <th style = '15%'>タイトル</th>
            <th style = '18%'>感想</th>
            <th style = '7%'>タグ</th>
            <th style = '15%'>評価</th>
            <th colspan = '3'></th>
        </tr>
      </thead>
      <tbody>
        <% @cooks.each do |cook| %>
          <tr class = 'cooks_index_tbody_tr' data-href= '/admin/cooks/<%= cook.id %>'>
            <td><%= image_tag @customer.get_profile_image(70, 70) %></td>
            <td><%= cook.title %></td>
            <td><%= cook.body %></td>
            <td><%= cook.tag %></td>
            <td><%= render "public/cooks/rate", cook: cook %></td>
            <td>
              <%= image_tag cook.get_image(100, 100) %>
              <%= link_to '詳細画面へ', admin_cook_path(cook), class: "cook_#{cook.id} btn btn-success ml-3 mt-3" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="d-flex justify-content-center">
      <%= paginate @cooks %>
    </div>
  </div>
</div>