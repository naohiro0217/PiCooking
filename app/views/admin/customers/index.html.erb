
<h4>会員一覧</h4>

<table>
  <thead>
    <th></th>
    <th>会員ID</th>
    <th>ユーザー名</th>
    <th>メールアドレス</th>
    <th>ステータス</th>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= image_tag @customer.get_profile_image(100,100) %></td>
        <td><% customer.id %></td>
        <td><% customer.name %></td>
        <td><% customer.nickneme %></td>
        <td><% customer.email %></td>
          <% if customer.is_deleted? %>
            <td>退会</td>
          <% else %>
            <td>有効</td>
          <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


