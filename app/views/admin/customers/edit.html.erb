
<h4>編集画面</h4>

<h5><%= @customer.nickname %>さん</h5>

<table>
  <%= form_with model: @customer do |f| %>

    <tr>
      <td>ユーザーネーム</td>
      <td><%= @customer.nickname %></td>
    </tr>

    <tr>
      <td>プロフィール</td>
      <td><%= @customer.introduction %>
    </tr>

    <%# 会員ステータスをラジオボタンで切り替え %>
    <tr>
      <td>ステータス</td>
      <td>
        <%= f.radio_button :is_deleted, :false %>
        <%= f.label :is_deleted, "有効" %>
        <%= f.radio_button :is_deleted,  :true %>
        <%= f.label :is_deleted, "退会" %>
      </td>
    </tr>
    <td>
      <%= f.submit "変更を保存" %>
    </td>

  <% end %>
</table>


