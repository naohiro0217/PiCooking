<div class='container'>
    <div class='mt-3'>
      <h3 class='text-nowrap'><%= @customer.nickname %>さんの編集画面</h3>
      <%= form_with model: [:admin, @customer] do |f| %>
        <table class='table table-hover table-inverse'>
          <thead class='table-secondary' height='50'>
            <th scope="col" style="width:50%"></th>
            <th scope="col" style="width:50%"></th>
          </thead>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>
          <tr>
            <td class = 'text-nowrap'>ユーザーネーム</td>
            <td><%= @customer.nickname %></td>
          </tr>
          <tr>
            <td>フルネーム</td>
            <td><%= @customer.name %></td>
          </tr>
          <tr>
            <td>プロフィール</td>
            <td><%= @customer.introduction %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td>
              <%= f.radio_button :is_deleted, :false %>
              <%= f.label :is_deleted, "有効" %>
              <%= f.radio_button :is_deleted,  :true %>
              <%= f.label :is_deleted, "退会" %>
            </td>
          </tr>
        </table>
        <div class='d-flex justify-content-center my-3'>
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
</div>

