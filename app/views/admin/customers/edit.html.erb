<h4>編集画面</h4>
<h5><%= @customer.nickname %>さん</h5>
<%= form_with model: [:admin, @customer] do |f| %>
  <div>
    <span>ユーザーネーム</span>
    <span><%= @customer.nickname %></span>
  </div>
  <div>
    <span>プロフィール</span>
    <span><%= @customer.introduction %></span>
  </div>
  <%# 会員ステータスをラジオボタンで切り替え %>
  <div>
    <span>ステータス</span>
    <div>
      <%= f.radio_button :is_deleted, :false %>
      <%= f.label :is_deleted, "有効" %>
      <%= f.radio_button :is_deleted,  :true %>
      <%= f.label :is_deleted, "退会" %>
    </div>
  </div>
  <div>
    <%= f.submit "変更を保存" %>
  </div>
<% end %>
