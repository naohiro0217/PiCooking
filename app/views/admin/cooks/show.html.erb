<div class = 'container'>
  <h3 class = 'mt-3 text-nowrap'>投稿情報<%= link_to "削除", admin_cook_path(@cook), method: :delete, class: 'btn btn-danger btn-sm px-3 ml-3' %></h3>
  <div class = 'row col-12'>
    <table class = 'col-6 table table-bordered border-dark'>
      <thead>
        <th scope="col" style="width:30%"></th>
        <th scope="col" style="width:70%"></th>
      </thead>
      <tbody>
        <tr>
          <td>
            <%= link_to admin_customer_path(@customer.id) do %>
              <%= image_tag @customer.get_profile_image(70, 70) %>
            <% end %>
          </td>
          <td><%= @customer.nickname %></td>
        </tr>

        <tr>
          <td>タイトル</td>
          <td><%= @cook.title %></td>
        </tr>

        <tr>
          <td>感想</td>
          <td><%= @cook.body %></td>
        </tr>
        <tr>
          <td>タグ</td>
          <td><%= @cook.tag %></td>
        </tr>
        <tr>
          <td>コメント数</td>
          <td><%= @cook.cook_comments.count %></td>
        </tr>
        <tr>
          <td>評価</td>
          <td><%= render 'public/cooks/rate', cook: @cook %></td>
        </tr>
        <tr>
          <td>投稿日</td>
          <td><%= @cook.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
      </tbody>
    </table>
    <div class = 'col-6'>
      <%= image_tag @cook.get_image(500, 500) %>
    </div>
    </div>
    <div id='admin_comments_area' class = 'col-10'>
      <%# コメント一覧 %>
      <%= render 'admin/cook_comments/index', cook: @cook, cook_comment: @cook_comment %>
    </div>
  </div>
</div>

