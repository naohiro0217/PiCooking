<div class = 'container'>
  <div class = 'row mt-5'>
    <div class = 'col-4'>
      <div>
        <%= image_tag @customer.get_profile_image(100, 100) %>
      </div>

      <table class = "table" >
        <tbody>
          <tr>
            <th><%= @customer.nickname %></th>
          </tr>
          <tr>
            <th><%= @customer.introduction %></th>
          </tr>
        </tbody>
      </table>

      <% if @customer == current_customer %>
        <%= link_to "編集する", edit_customer_path, class: 'btn btn-success' %>
      <% end %>
    </div>
    <div class = 'col-8'>
      <h3 class = 'mb-2'><%= @customer.nickname %>さんの投稿一覧</h3>
      <div class="d-flex justify-content-center">
        <span class = 'bg-light'><%= paginate @cooks %></span>
      </div>
      <table class = "table table-hover table-inverse" >
          <thead>
              <tr>
                  <th></th>
                  <th>タイトル</th>
                  <th>感想</th>
                  <th>タグ</th>
                  <th>評価</th>
                  <th colspan="3"></th>
              </tr>
          </thead>

          <tbody>
          <% @cooks.each do |cook| %>
            <tr>
              <td>
                <%= link_to customer_path(@customer.id) do %>
                    <%= image_tag @customer.get_profile_image(70,70) %>
                <% end %>
              </td>
              <td>
                <%= cook.title %>
              </td>
              <td>
                <%= cook.body %>
              </td>
              <td><%= cook.name %></td>
              <td><%= render "public/cooks/rate", cook: cook %></td>
              <td><%= image_tag cook.get_image(100, 100) %></td>
              <td><%= link_to '詳細画面へ', cook_path(cook), class: "cook_#{cook.id} btn btn-success" %></td>
            </tr>

          <% end %>
          </tbody>
      </table>
    </div>
  </div>
</div>


