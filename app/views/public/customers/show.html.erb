
<div>
  <%= image_tag @customer.get_profile_image(100, 100) %>
</div>

<table class = "table" >
  <tbody>
    <tr>
      <th>ユーザーネーム</th>
      <th><%= @customer.nickname %></th>
    </tr>
    <tr>
      <th>プロフィール</th>
      <th><%= @customer.introduction %></th>
    </tr>
  </tbody>
</table>

<% if @customer.name != "guestuser" %>
<div class='row'>
  <%= link_to '',edit_customer_path(@customer),class: "btn btn-outline-secondary btn-block fas fa-customer-cog edit_customer_#{@customer.id}" %>
</div>
<% end %>

<% if @customer == current_customer %>
  <%= link_to "編集する", edit_customer_path %>
<% end %>


<h1><%= @customer.nickname %>さんの投稿一覧</h1>
<div class="d-flex justify-content-center">
  <span class = 'bg-light'><%= paginate @cooks %></span>
</div>
<table class = "table table-hover table-inverse" >
    <thead>
        <tr>
            <th></th>
            <th>タイトル</th>
            <th>感想</th>
            <th>タグ</th>
            <th>評価</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
    <% @cooks.each do |cook| %>
      <tr>
        <td>
          <%= link_to customer_path(@customer.id) do %>
              <%= image_tag @customer.get_profile_image(100,100) %>
          <% end %>
        </td>
        <td>
          <span><%= link_to cook.title, "/cooks/#{cook.id}" %></span>
        </td>
        <td>
          <%= cook.body %>
        </td>
        <td><%= cook.name %></td>
        <td><%= render "public/cooks/rate", cook: cook %></td>
        <td><%= image_tag cook.get_image(100, 100) %></td>
      </tr>

    <% end %>
    </tbody>
</table>

