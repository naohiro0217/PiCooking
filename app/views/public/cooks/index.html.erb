
<h5>投稿一覧</h5>
<table>
  <thead>
    <tr>
      <td></td>
      <td>タイトル</td>
      <td>感想</td>
      <td colspan="3"></th>
    </tr>


  </thead>
  <tbody>
    <% @cooks.each do |cook| %>
      <tr>
        <td>
          <%= link_to(cook.customer) do %>
            <%= image_tag cook.customer.get_profile_image(40, 40) %>
          <% end %>
        </td>

        <td>
          <%= link_to cook.title,cook_path(cook), class: "cook_#{cook.id}" %>
        </td>

        <td><% cook.body %></td>
      </tr>

    <% end %>
  </tbody>
</table>

