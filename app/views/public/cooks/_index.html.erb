<div class="d-flex justify-content-center">
  <span class = 'bg-light'><%= paginate cooks %></span>
</div>

<table class="table align-middle text-light" >
  <thead>
    <tr>
      <th></th>
      <th style="width:10%">ユーザーネーム</th>
      <th style="width:10%">タイトル</th>
      <th style="width:20%">感想</th>
      <th style="width:5%">タグ</th>
      <th style="width:12%">評価</th>
      <th style="width:10%"></th>
      <th></th>
      <th style="width:10%"></th>
    </tr>

  </thead>
  <tbody>
    <% cooks.each do |cook| %>
      <tr>
        <td>
          <%= link_to(cook.customer) do %>
            <%= image_tag cook.customer.get_profile_image(70, 70) %>
          <% end %>
        </td>

        <td>
            <%= cook.customer.nickname %>
        </td>

        <td>
          <%= cook.title %>
        </td>

        <td><%= cook.body %></td>
        <td><%= cook.name %></td>
        <td><%= render "public/cooks/rate", cook: cook %></td>
        <td>コメント数: <%= cook.cook_comments.count %></td>
        <td><%= image_tag cook.get_image(100, 100) %></td>
        <td><%= link_to '詳細画面へ', cook_path(cook), class: "cook_#{cook.id} btn btn-success" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

