<div class = 'container'>
  <div class = 'row d-flex justify-content-center'>
    <div class = 'col-8 px-5 mt-5 border border-dark'>
      <h2 class = 'mt-4 mb-5 offset-2'>新規会員登録</h2>

      <%= form_with model: @customer, url: customer_registration_path do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>

        <div class ="field ml-5">
          <%= f.label :フルネーム　　　　　　　 %>
          <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
        </div>

        <div class ="field ml-5">
          <%= f.label:ユーザーネーム　　　　　 %>
          <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
        </div>
        <div class="field ml-5">
          <%= f.label :メールアドレス　　　　　 %>
          <%= f.email_field :email, autofocus: true, placeholder:"sample@example.com", autocomplete: "email" %>
        </div>

        <div class="field ml-5">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em class = 'text-light'>（<%= @minimum_password_length %>文字以上）</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password" %>
        </div>

        <div class="field ml-5">
          <%= f.label :パスワード（確認用）　　 %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="actions actions text-center mt-3">
          <%= f.submit "登録する", class: 'btn btn-success px-5' %>
        </div>
      <% end %>

      <h5 class = 'mt-3 mb-3'>既に登録済みの方は
      <%= link_to "こちら", new_customer_session_path %>
      からログインしてください</h5>
    </div>
  </div>
</div>

