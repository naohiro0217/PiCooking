
<table>
  <tbody>
      <% cook.cook_comments.each do |cook_comment| %>
      <tr>

        <td>
          <%= link_to customer_path(cook_comment.customer) do %>
            <%= image_tag cook_comment.customer.get_profile_image(100, 100) %><br>
            <%= cook_comment.customer.nickname %>
          <% end %>
        </td>
        <td>
          <%= cook_comment.comment %>
          <%= cook_comment.created_at.strftime('%Y/%m/%d') %>
        </td>

        <td>
          <% if cook_comment.customer == current_customer %>
            <%= link_to "コメントを削除", cook_cook_comment_path(cook_comment.cook, cook_comment), method: :delete %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>