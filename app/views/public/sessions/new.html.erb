<div class = 'container'>
  <div class = 'row ml-3'>
    <div class = 'offset-2 px-5 mt-5 bg-dark block-center'>
      <h2 class = 'mt-4 mb-5 offset-2 text-light'>ログイン</h2>
      <h6 class = 'col-7 my-4 text-light'><strong>会員の方はこちらからログイン</strong></h6>

      <%= form_with model: @customer, url: customer_session_path do |f| %>
        <div class="form_group ml-5">
          <%= f.label :メールアドレス, class: 'text-light' %>
          <%= f.email_field :email, placeholder:"sample@example.com", autofocus: true, autocomplete: "email", class: 'ml-5' %>
        </div>

        <div class="form_group ml-5 mt-3">
          <%= f.label :パスワード　　, class: 'text-light' %>
          <%= f.password_field :password, autocomplete: "current-password", class: 'ml-5' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="field ml-5 mt-2">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン状態を保持する, class: 'text-light' %>
          </div>
        <% end %>

        <div class="actions text-center mt-3">
          <%= f.submit "ログイン", class: 'btn btn-success px-5' %>
        </div>
      <% end %>

      <h5 class = 'mt-3 text-light'>会員登録がお済みでない方は
      <%= link_to "こちら", new_customer_registration_path, class: 'text-primary' %>から新規登録を行なってください
      </h5>
    </div>
  </div>
</div>



